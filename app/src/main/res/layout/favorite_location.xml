<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clFavoritePlace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLength="24"
        android:maxLines="1"
        android:textColor="@color/hint_text_color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/sample_atm" />

    <TextView
        android:id="@+id/tvfavoriteAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        tools:text="@string/sample_address" />

    <RatingBar
        android:id="@+id/rbfavRatings"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:progressBackgroundTint="@color/navigationDefault"
        android:secondaryProgressTint="@color/navigationDefault"
        android:progressTint="@color/rating_color"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvfavoriteAddress" />

    <TextView
        android:id="@+id/tvfavRatingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/rbfavRatings"
        app:layout_constraintStart_toEndOf="@id/rbfavRatings"
        app:layout_constraintTop_toTopOf="@id/rbfavRatings" />

    <TextView
        android:id="@+id/tvfavTimings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbfavRatings"
        tools:text="@string/sample_timings" />

    <ImageView
        android:id="@+id/ivfavSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="-8dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/listen_icon"
        android:src="@drawable/icon_speak"
        app:layout_constraintBottom_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toEndOf="@id/tvHeading"
        app:layout_constraintTop_toTopOf="@id/tvHeading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvfavTimings">

        <ImageView
            android:id="@+id/ivfavDirectionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingRight="40dp"
            android:paddingLeft="10dp"
            android:contentDescription="@string/icon_direction"
            android:src="@drawable/icon_directions" />

        <ImageView
            android:id="@+id/ivfavCallIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingRight="40dp"
            android:contentDescription="@string/icon_call"
            android:src="@drawable/icon_call" />

        <ImageView
            android:id="@+id/ivfavShareIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon_share"
            android:src="@drawable/icon_share" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>