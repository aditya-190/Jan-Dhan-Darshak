<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSingleFaq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="32dp">

    <TextView
        android:id="@+id/tvFaqNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:lineSpacingExtra="6.4sp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/navigationDefault"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01" />

    <TextView
        android:id="@+id/tvFaqQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:lineSpacingExtra="4sp"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/ivShowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFaqNumber"
        tools:text="Alright, but what exactly do your app do ?" />

    <ImageView
        android:id="@+id/ivHideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon_cancel"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:src="@drawable/icon_hide_button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFaqQuestion" />

    <ImageView
        android:id="@+id/ivShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon_cancel"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:src="@drawable/icon_show_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFaqQuestion" />

    <TextView
        android:id="@+id/tvFaqDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="7.2sp"
        android:textColor="@color/navigationDefault"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFaqQuestion"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Arcu ut iaculis montes, sit massa egestas imperdiet aenean id. In et volutpat pharetra faucibus massa lectus suscipit elit risus. Massa semper quis id elit adipiscing tellus sagittis. Tellus molestie eget nulla diam sit." />

</androidx.constraintlayout.widget.ConstraintLayout>